<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/blood"
tools:context="activities.CollectorLogRegActivity">

<TextView
    android:id="@+id/welcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="WELCOME BLOOD COLLECTOR"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    android:textColor="@color/colorWhite"
    android:textSize="20sp"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/blood_collector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/collectRegButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorRed"
            android:layout_margin="10dp"
            android:text="Register First" />

        <Button
            android:id="@+id/collectorLogButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Login"
            android:textColor="@color/colorRed" />



    </LinearLayout>

</LinearLayout>

