<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/blood"
    tools:context="activities.SearchBloodActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search_blood"
        android:scaleType="fitXY"/>

    <EditText
        android:id="@+id/serachReqrBlood"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:drawableLeft="@mipmap/search_icon"
        android:hint="Write Your Required Blood Group"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSearchBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorRed"
        android:drawableLeft="@mipmap/icon_search"
        android:text="Click Here"
        android:onClick="searchblood"
        />



